<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0C0C0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="笔录系统"
            android:layout_centerVertical="true"
            android:textSize="32sp"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account_infor"
            android:text="请登录/注册"
            android:textColor="#0000FF"
            android:textSize="35sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:src="@drawable/github"
            android:background="#C0C0C0"
            android:layout_toLeftOf="@id/account_infor"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/right_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50">
        </FrameLayout>

        <RadioGroup
            android:id="@+id/bottom_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@android:color/white"
            android:layout_alignParentBottom="true">
            <RadioButton
                android:id="@+id/navigation_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="笔录设置"
                android:drawableTop="@drawable/setting"
                style="@style/RadioGroupButtonStyle"
                android:background="?android:attr/selectableItemBackground"/>
            <RadioButton
                android:id="@+id/navigation_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="笔录采录"
                android:drawableTop="@drawable/record"
                style="@style/RadioGroupButtonStyle"
                android:background="?android:attr/selectableItemBackground"/>
            <RadioButton
                android:id="@+id/navigation_proofread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文稿核对"
                android:drawableTop="@drawable/edit"
                style="@style/RadioGroupButtonStyle"
                android:background="?android:attr/selectableItemBackground"/>
            <RadioButton
                android:id="@+id/navigation_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="笔录查询"
                android:drawableTop="@drawable/search"
                style="@style/RadioGroupButtonStyle"
                android:background="?android:attr/selectableItemBackground"/>
            <RadioButton
                android:id="@+id/navigation_print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排版打印"
                android:drawableTop="@drawable/print"
                style="@style/RadioGroupButtonStyle"
                android:background="?android:attr/selectableItemBackground"/>
            <RadioButton
                android:id="@+id/navigation_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版面管理"
                android:drawableTop="@drawable/manage"
                style="@style/RadioGroupButtonStyle"
                android:background="?android:attr/selectableItemBackground"/>
            <RadioButton
                android:id="@+id/navigation_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统设置"
                android:drawableTop="@drawable/setting"
                style="@style/RadioGroupButtonStyle"
                android:background="?android:attr/selectableItemBackground"/>
        </RadioGroup>


    </RelativeLayout>






</LinearLayout>